@page
@model eGallery.Web.Razor.Pages.app.Category.IndexModel
@{
    ViewData["Title"] = "Index";
}

@Model.Message
<div id="loadingCategories" style="background-color: cadetblue; display: none">
    <p>Loading Status...</p>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box box-info " id="nopcommerce-news-box">
            <div class="box-header with-border clearfix">
                <div class="box-title">
                    <i class=".ion.ion-ion-aperture"></i>
                    Category Table
                </div>
                <div class="box-tools pull-right">
                    <a asp-page="./AddEditCategory" asp-route-id="0" class="btn btn-primary btn-sm">Add New</a>
                </div>
            </div>
            <div class="box-body">
                <table id="tblCategory" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Category Id</th>
                            <th>Category Name</th>
                            <th>Parent Category</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.category)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryId)
                            </td>
                            <td>
                                <a asp-page="./AddEditCategory" asp-route-id="@item.CategoryId">@item.CategoryName</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentCategoryId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StatusId)
                            </td>
                            <td>
                                <a asp-page="./Index" asp-route-id="@item.CategoryId" class="btn btn-coffe btn-xs">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

