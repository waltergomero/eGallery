@{bool isHorizontal = ViewData["LayoutSidenavHorizontal"] != null && ViewData["LayoutSidenavHorizontal"].ToString() == "True";}
@{string currentPage = ViewContext.RouteData.Values["Page"].ToString();}

<!-- Layout sidenav -->
<div id="layout-sidenav" class="@(isHorizontal ? "layout-sidenav-horizontal sidenav-horizontal container-p-x flex-grow-0" : "layout-sidenav sidenav-vertical") sidenav bg-sidenav-theme">
    <!-- Inner -->
    <ul class="sidenav-inner@(!isHorizontal ? " py-1" : "")">
        <li class="sidenav-item@(currentPage == "/Index" ? " active" : "")">
            <a asp-page="/Index" class="sidenav-link"><i class="sidenav-icon ion ion-ios-contact"></i><div>Home</div></a>
        </li>
        <li class="sidenav-item@(currentPage == "/app/Gallery/Index" ? " active" : "")">
            <a asp-page="/app/Gallery/Index" class="sidenav-link"><i class="sidenav-icon ion ion-ios-aperture"></i><div>Gallery</div></a>
        </li>
        <li class="sidenav-item@(currentPage == "/app/Status/Index" ? " active" : "")">
            <a asp-page="/app/Status/Index" class="sidenav-link"><i class="sidenav-icon ion ion-ios-aperture"></i><div>Status</div></a>
        </li>
        <li class="sidenav-item@(currentPage == "/app/Category/Index" ? " active" : "")">
            <a asp-page="/app/Category/Index" class="sidenav-link"><i class="sidenav-icon ion ion-ios-aperture"></i><div>Category</div></a>
        </li>
    </ul>
</div>
<!-- / Layout sidenav -->
